            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h3>AIML Cluster</h3>
                    </div>
                    <div class="card-body">
                        <h5 class="section-title">Examiner List:</h5>
                        <ul class="list-group">
                            <% examiners.filter(examiner => examiner.cluster == 'AIML').forEach(examiner => { %>
                                <li class="list-group-item <%= examiner.type == 1 ? 'internal' : 'external' %>">
                                    <strong><%= examiner.type == 1 ? 'Internal' : 'External' %>:</strong>
                                    <%= examiner.first_name %> <%= examiner.last_name %>
                                </li>
                            <% }); %>
                        </ul>

                        <h5 class="mt-4 section-title">Supervisor List:</h5>
                        <ul class="list-group">
                            <% supervisors.filter(supervisor => supervisor.cluster == 'AIML').forEach(supervisor => { %>
                                <li class="list-group-item">
